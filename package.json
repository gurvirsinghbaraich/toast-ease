{
  "name": "toast-ease",
  "version": "0.0.1",
  "description": "An opinionated toast component.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "import": "./dist/index.mjs",
  "require": "./dist/index.js",
  "scripts": {
    "lint": "tsc",
    "build": "tsup src/index.tsx src/toast.tsx src/server.ts",
    "dev": "tsup src/index.tsx src/toast.tsx src/server.ts --watch",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./src/tailwind.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "github.com/gurvirsinghbaraich/toast-ease.git"
  },
  "keywords": [
    "react",
    "notifications",
    "toast",
    "snackbar",
    "messsage",
    "toast-ease"
  ],
  "author": "Gurvir Singh <gurvirsingh.baraich@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "nanoid": "^3.0.0"
  }
}
